# Docker Compose Configuration

version: '3.8'

services:
  postgres:
    image: postgres
    environment:
      POSTGRES_DB: maintenance_prediction
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: ZunZun1998
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

  redpanda:
    image: docker.redpanda.com/redpandadata/redpanda:v23.1.3
    environment:
      REDPANDA_AUTO_CREATE_TOPICS: "true"
      REDPANDA_LISTENERS: "PLAINTEXT://redpanda:9092"
      REDPANDA_ADVERTISED_LISTENERS: "PLAINTEXT://redpanda:9092"
      REDPANDA_LOG_LEVEL: "info"
    ports:
      - "9092:9092"
    volumes:
      - redpanda_data:/var/lib/redpanda/data

  nginx:
    image: nginx:1.21-alpine
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
    depends_on:
      - frontend
      - backend

  frontend:
    build:
      context: ./frontend_bigdata
    ports:
      - "3000:3000"
    depends_on:
      - redpanda
      - postgres

  backend:
    build:
      context: ./backend_bigdata
    ports:
      - "8000:8000"
    depends_on:
      - postgres
      - redpanda

volumes:
  postgres_data:
  redpanda_data: